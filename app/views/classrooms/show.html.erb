<%= turbo_frame_tag :container do %>
  <div class="flex justify-center items-center h-screen">
    <div class="bg-white p-6 rounded shadow-md w-80">
      <h2 class="text-2xl font-bold mb-4"><%= t('show') %></h2>
      <div class="mb-4">
        <p class="text-gray-700 font-bold"><%= t('.name') %></p>
        <p class="text-gray-900"><%= @classroom.name %></p>
      </div>
      <div class="mb-4">
        <p class="text-gray-700 font-bold"><%= t('.course') %></p>
        <p class="text-gray-900"><%= @classroom.course %></p>
      </div>

      <p class="text-gray-700 font-bold"><%= t('.customers') %></p>
      <% @classroom.customers.each do |customer| %>
        <div class="mb-4">
          <p class="text-gray-900"><%= link_to customer.full_name, '#', class: 'link' %></p>
        </div>
      <% end %>
      <div class="flex justify-between">
        <%= link_to t('back'), classrooms_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to t('edit'), edit_classroom_path(@classroom), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to t('destroy'), classroom_path(@classroom), data: { 'turbo-method': :delete, 'turbo-confirm': 'confirmar ação de apagar?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    </div>
  </div>
<% end %>
