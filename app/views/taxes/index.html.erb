<%= turbo_frame_tag :container do %>
  <%= render 'shared/notice_alert' %>
  <span class="flex justify-center">
    <%= link_to t('.new_tax'), new_tax_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded mr-2 mb-2" %>
  </span>

  <div class="flex justify-center font-semibold">
    <%= t('.all_taxes') %>:
  </div>

  <div class="overflow-x-hidden w-full">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full text-center text-sm font-light">
          <thead
            class="border-b bg-blue-500 font-medium text-white dark:border-blue-500 dark:bg-blue-500">
            <tr>
              <th scope="col" class=" px-0 py-4"><%= Tax.human_attribute_name(:name) %></th>
              <th scope="col" class=" px-0 py-4"><%= Tax.human_attribute_name(:value) %></th>
              <th scope="col" class=" px-0 py-4"><%= t('actions') %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @taxes %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
