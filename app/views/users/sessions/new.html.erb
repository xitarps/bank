<div class="container mx-auto py-8">
  <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md") do |f| %>
     <div class="mb-4">
      <%= f.label :email, "email", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "password", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" %>
    </div>

    <%= f.submit 'Login', disable_with: 'Submiting...', class: "w-full bg-indigo-500 text-white text-sm font-bold py-2 px-4 rounded-md hover:bg-indigo-600 transition duration-300" do %>
      Save
    <% end %>

    <div class="mb-4">
      <%= render "users/shared/links" %>
    </div>
  <% end %>
</div>

