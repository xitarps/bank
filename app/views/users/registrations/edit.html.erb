<%= turbo_frame_tag :container do %>
  <%= render 'shared/notice_alert' %>
  <div class="container mx-auto py-8">
    <%= render "users/shared/error_messages", resource: resource %>
    <h1 class="text-2xl font-bold mb-6 text-center"><%= t('edit') %> <%= resource.model_name.human %></h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md") do |f| %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500"%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class='field'>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500" %>
      </div>

      <div class="field my-6">
        <%= f.submit 'Registrar', disable_with: 'Submiting...', class: "w-full bg-blue-500 text-white text-sm font-bold py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300" %>
      </div>
    <% end %>

    <div class="field">
      <%= render "users/shared/links" %>
    </div>

    <div class='mt-2'>
      <h3 class='font-semibold'>Cancel my account</h3>

      <div class='flex'>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'ml-2 text-blue-700' %></div>
    </div>
  </div>
<% end %>
