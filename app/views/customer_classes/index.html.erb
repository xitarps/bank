<div class="container mx-auto">
  <h1 class="text-center text-2xl font-bold my-4">Todas as Classes de Clientes</h1>

  <div class="flex justify-center">
    <%= link_to 'Criar Nova Classe de Cliente', new_customer_class_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="flex flex-col items-center mt-4">
    <div class="overflow-x-auto w-full">
      <div class="py-2">
        <div class="overflow-hidden">
          <table class="min-w-full bg-white border border-gray-300">
            <thead>
              <tr>
                <th class="px-4 py-2 text-sm font-medium text-gray-700">#</th>
                <th class="px-4 py-2 text-sm font-medium text-gray-700">Cliente</th>
                <th class="px-4 py-2 text-sm font-medium text-gray-700">Turma</th>
                <th class="px-4 py-2 text-sm font-medium text-gray-700"></th>
              </tr>
            </thead>
            <tbody>
              <% @customer_classes.each do |customer_class| %>
                <tr class="bg-gray-100 border-b">
                  <td class="text-center px-4 py-2 text-sm text-gray-700"><%= customer_class.id %></td>
                  <td class="text-center px-4 py-2 text-sm text-gray-700"><%= customer_class.customer.first_name %></td>
                  <td class="text-center px-4 py-2 text-sm text-gray-700"><%= customer_class.classroom.name %></td>
                  <td class="text-center px-4 py-2">
                    <%= link_to t('show'), customer_class_path(customer_class), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mr-2' %>
                    <%= link_to t('edit'), edit_customer_class_path(customer_class), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded mr-2' %>
                    <%= link_to t('destroy'), customer_class_path(customer_class), data: { 'turbo-method': :delete, 'turbo-confirm': 'confirmar aÃ§Ã£o de apagar?' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
