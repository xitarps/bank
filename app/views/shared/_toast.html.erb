<div class="shadow-lg rounded-lg bg-<%= primary %>-500 m-8 p-4 notification-box toast-custom">
  <div class="text-md text-<%= complement %> pb-2">
    <%= title %>
    <span class="float-right close-cross">
      <svg
        class="fill-current text-<%= complement %> hover:text-<%= hover %>"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        width="22"
        height="22"
        role="button"
      >
        <path
          class="heroicon-ui"
          d="M16.24 14.83a1 1 0 0 1-1.41 1.41L12 13.41l-2.83 2.83a1 1 0 0 1-1.41-1.41L10.59 12 7.76 9.17a1 1 0 0 1 1.41-1.41L12 10.59l2.83-2.83a1 1 0 0 1 1.41 1.41L13.41 12l2.83 2.83z"
        />
      </svg>
    </span>
  </div>
  <div class="text-sm   text-<%= complement %>  tracking-tight ">
    <%= message %>
  </div>
</div>

<%= javascript_include_tag 'toast' %>
