<nav class="flex items-center justify-between flex-wrap bg-teal-500 p-6">
  <div class="flex items-center flex-shrink-0 text-white mr-6">
    <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
    <%= link_to root_path do %>
      <span class="font-semibold text-xl tracking-tight">Home</span>
    <% end %>
  </div>
  <div class="block lg:hidden">
    <button class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white">
      <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>
  <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
    <div class="text-sm lg:flex-grow">
      <% if user_signed_in? && ['Customer'].include?(current_user.userable_type) %>
        <%= link_to t('.contact_list'), contact_list_path(current_user.userable), class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%>
      <% end %>
      <% if user_signed_in? && ['Root', 'Administrator'].include?(current_user.userable_type) %>
        <%= link_to t('.taxes'), taxes_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%>
      <% end %>
      <% if user_signed_in? && ['Root', 'Administrator'].include?(current_user.userable_type) %>
        <%= link_to t('.products'), products_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%>
      <% end %>
      <% if user_signed_in? && (current_user.userable_type == 'Root') %>
         <%= link_to t('.administrators'), administrators_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%>
      <% end %>
      <% if user_signed_in? && ['Customer'].include?(current_user.userable_type) %>
        <%= link_to t('.account'), account_path(current_user.userable), class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%>
      <% end %>
      <% if user_signed_in? && ['Root', 'Administrator'].include?(current_user.userable_type) %>
        <%= link_to t('.accounts'), accounts_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to t('.investments'), investments_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%> 
      <% end %>
      <% if user_signed_in? && ['Root', 'Administrator'].include?(current_user.userable_type) %>
        <%= link_to t('.classrooms'), classrooms_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%>
      <% end %>
      <% if user_signed_in? && ['Customer'].include?(current_user.userable_type) %>
        <%= link_to t('.transfers'), transfers_path(current_user.userable), class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%> 
      <% end %>
      <% if user_signed_in? && ['Root', 'Administrator'].include?(current_user.userable_type) %>
        <%= link_to t('.transfers'), transfers_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4"%> 
      <% end %>
    </div>
    <div>
      <% if user_signed_in? %>
        <div class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white">
          <% if current_user.userable_type == 'Root' %>
            <%= Root.model_name.human %>
          <% elsif current_user.userable_type == 'Administrator' %>
            <%= Administrator.model_name.human %>
          <% else %>
            <%= current_user.userable.first_name %>
          <% end %>
        </div>

        <%= link_to t('.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: "inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-0"%>
      <% else %>
        <%= link_to t('.login'), new_user_session_path, class: "inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-0"%>
      <% end %>
    </div>
  </div>
</nav>
